<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.AppWriteProject" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="MainTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:statusBarColor">@color/ofwhite</item>
    </style>
    <style name="MainActivityTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/main_color</item>

        <item name="android:statusBarColor">@color/ofwhite</item>
        <item name="android:windowLightStatusBar">false</item>
    </style>
    <style name="reg_light_text">
        <item name="android:textStyle">normal</item>
        <item name="android:fontFamily">@font/regular</item>
        <item name="android:textColor">#96999C</item>
    </style>
    <style name="reg_black_text">
        <item name="android:textStyle">normal</item>
        <item name="android:fontFamily">@font/regular</item>
        <item name="android:textColor">#000000</item>
    </style>
    <style name="title_text">
        <item name="android:fontFamily">@font/semibold</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">23sp</item>
    </style>
    <style name="title_text_theme">
        <item name="android:fontFamily">@font/semibold</item>
        <item name="android:textColor">@color/main_color</item>
        <item name="android:textSize">23sp</item>
    </style>
    <style name="reg_dark_text">
        <item name="android:fontFamily">@font/semibold</item>
        <item name="android:textColor">@color/editor_black</item>
        <item name="android:textSize">23sp</item>
    </style>

    <style name="location_theme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/main_color</item>
    </style>
</resources>